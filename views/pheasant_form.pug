extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='word') Word:
      input#word.form-control(type='text', placeholder='Input word' name='word' required value=(undefined===pheasant  ? '' : pheasant.word) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg